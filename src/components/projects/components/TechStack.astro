---
import type { Skill } from '@shared/skill/interfaces.ts';
import SkillBlock from '@shared/skill/SkillBlock.astro';
import { useTranslations } from '@shared/helpers.ts';
import { PROJECT_COMPONENTS_TRANSLATIONS } from '../translations.ts';

interface Props {
  skills: Skill[];
}

const { skills } = Astro.props;
const t = useTranslations(Astro.url, PROJECT_COMPONENTS_TRANSLATIONS);
---

<div class="mb-8">
  <h3 class="text-primary mb-4 text-xl font-bold">{t('components.techStack.title')}</h3>
  <div class="flex flex-wrap justify-start gap-3">
    {skills.map((skill: Skill) => <SkillBlock skill={skill} />)}
  </div>
</div>
