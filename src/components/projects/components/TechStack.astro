---
import type { Skill } from '@shared/skill/interfaces.ts';
import SkillBlock from '@shared/skill/SkillBlock.astro';
interface Props {
  skills: Skill[];
}

const { skills } = Astro.props;
---

<div class="mb-8">
  <h3 class="text-primary mb-4 text-xl font-bold">Technical Stack</h3>
  <div class="flex flex-wrap justify-center gap-3">
    {skills.map((skill: Skill) => <SkillBlock skill={skill} />)}
  </div>
</div>
