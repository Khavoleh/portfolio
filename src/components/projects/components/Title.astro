---
import type { SvgComponent } from 'astro/types';

interface Props {
  Icon: SvgComponent;
  title: string;
  description: string;
}

const { Icon, title, description } = Astro.props;
---

<div class="mb-8">
  <h2 class="text-primary mb-4 flex items-center text-3xl font-bold md:text-4xl">
    <Icon class="mr-3 h-8 w-8 shrink-0 md:h-10 md:w-10" />
    {title}
  </h2>
  <p class="text-secondary text-lg leading-relaxed">{description}</p>
</div>
