---
import { PAGE_URLS } from '@shared/constants.ts';
import HomeIcon from './icons/home.svg';
import BackIcon from './icons/back.svg';
---

<section class="flex flex-col gap-4 sm:flex-row">
  <a
    href={PAGE_URLS.HOME}
    class="focus-default transition-default inline-flex items-center justify-center gap-2 rounded-lg bg-blue-500 px-8 py-4 text-lg font-semibold text-white shadow-lg hover:bg-blue-600 hover:shadow-xl active:bg-blue-700 dark:bg-blue-600 dark:hover:bg-blue-500 dark:active:bg-blue-700"
  >
    <HomeIcon class="h-5 w-5" />
    <span>Back to Home</span>
  </a>

  <button
    onclick="window.history.back()"
    class="focus-default transition-default hover-default border-default inline-flex items-center justify-center gap-2 rounded-lg border-2 border-blue-500 bg-transparent px-8 py-4 text-lg font-semibold text-blue-600 shadow-lg hover:bg-blue-50 dark:border-blue-400 dark:text-blue-400 dark:hover:bg-slate-800"
  >
    <BackIcon class="h-5 w-5" />
    <span>Go Back</span>
  </button>
</section>
