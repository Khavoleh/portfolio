---
import { useTranslations } from '@shared/helpers.ts';
import { PRIVACY_POLICY_TRANSLATIONS } from './translations.ts';

const t = useTranslations(Astro.url, PRIVACY_POLICY_TRANSLATIONS);
---

<section class="mb-8">
  <h2 class="mb-4 text-2xl font-semibold text-gray-900 dark:text-white">{t('privacy.collect.title')}</h2>
  <p class="mb-4 text-gray-600 dark:text-gray-300" set:html={t('privacy.collect.text1')} />
  <p class="mb-4 text-gray-600 dark:text-gray-300" set:html={t('privacy.collect.text2')} />
  <ul class="mb-4 list-inside list-disc space-y-2 text-gray-600 dark:text-gray-300">
    <li set:html={t('privacy.collect.technical')} />
    <li set:html={t('privacy.collect.usage')} />
    <li set:html={t('privacy.collect.local')} />
  </ul>
</section>
