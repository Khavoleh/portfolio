---
import type { SocialLink } from '@shared/interfaces.ts';
import { SOCIAL_LINKS } from './constants.ts';
import { useTranslations } from '@shared/helpers.ts';
import { SOCIAL_LINKS_TRANSLATIONS } from './translations.ts';

const t = useTranslations(Astro.url, SOCIAL_LINKS_TRANSLATIONS);
---

<section class="mb-16">
  <h2 class="text-primary mb-8 text-center text-3xl font-bold">{t('socialLinks.title')}</h2>

  <div class="mx-auto flex max-w-2xl flex-wrap justify-center gap-6">
    {
      SOCIAL_LINKS.map((link: SocialLink) => (
        <a
          href={link.href}
          target="_blank"
          rel="noopener noreferrer"
          class="background-default border-default transition-default focus-default flex flex-col items-center rounded-xl border-2 p-8 shadow-lg hover:scale-105 hover:shadow-xl"
          aria-label={t(`socialLinks.aria.${link.label.toLowerCase()}`)}
        >
          <link.icon class="mb-4 h-16 w-16 text-blue-600 dark:text-blue-400" />
          <span class="text-primary text-lg font-semibold">{link.label}</span>
        </a>
      ))
    }
  </div>

  <p
    class="text-secondary mx-auto mt-8 max-w-2xl text-center leading-relaxed"
    set:html={t('socialLinks.description')}
  />
</section>
