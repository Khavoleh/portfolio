---
import { useTranslations } from '@shared/helpers.ts';
import { CONTACT_INTRO_TRANSLATIONS } from './translations.ts';

const t = useTranslations(Astro.url, CONTACT_INTRO_TRANSLATIONS);
---

<section class="mb-12 text-center">
  <h1 class="text-primary mb-6 text-4xl font-bold md:text-5xl lg:text-6xl">
    {t('intro.title')}
  </h1>
  <p class="text-secondary mx-auto max-w-3xl text-lg leading-relaxed md:text-xl" set:html={t('intro.description')} />
</section>
