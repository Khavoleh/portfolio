---
import type { Metric } from './interfaces';

interface Props {
  metric: Metric;
}

const { metric } = Astro.props;
---

<div class="rounded-xl bg-slate-50 p-6 text-center transition-all duration-300 dark:bg-slate-800">
  <div class="mb-2 text-4xl font-bold text-blue-500 dark:text-blue-400">{metric.value}</div>
  <div class="text-primary mb-1 text-sm font-semibold">{metric.name}</div>
  <div class="text-secondary text-sm">{metric.description}</div>
</div>
