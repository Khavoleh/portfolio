---
import type { Metric } from './interfaces';

interface Props {
  metric: Metric;
}

const { metric } = Astro.props;
---

<div class="background-default border-default flex flex-col items-center rounded-xl border-2 p-6 text-center shadow-lg">
  <div class="mb-2 text-4xl font-bold text-blue-600 dark:text-blue-400">{metric.value}</div>
  <div class="text-primary mb-1 text-sm font-semibold">{metric.name}</div>
  <div class="text-secondary text-sm">{metric.description}</div>
</div>
