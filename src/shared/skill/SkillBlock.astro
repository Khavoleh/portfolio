---
import type { Skill } from './interfaces';
import { getStyleClasses } from './helpers';

interface Props {
  skill: Skill;
}

const { skill } = Astro.props;

const styleClasses: string = getStyleClasses(skill.type);
---

<div class={`flex items-center gap-2 rounded-full px-4 py-2 font-medium ${styleClasses}`}>
  <span class="text-sm font-semibold">{skill.name}</span>
</div>
