---
import { getLanguageStaticPaths, useTranslations } from '@shared/helpers.ts';
import Layout from '@layouts/Layout.astro';
import ExperienceIntro from '@components/experience/ExperienceIntro.astro';
import TimelineCareer from '@components/experience/TimelineCareer.astro';
import CallToAction from '@components/experience/CallToAction.astro';
import { SEO_TRANSLATIONS } from '@layouts/translations.ts';

export const getStaticPaths = getLanguageStaticPaths;

const t = useTranslations(Astro.url, SEO_TRANSLATIONS);
---

<Layout title={t('experience_title')} description={t('experience_description')}>
  <div class="mx-auto w-full max-w-6xl px-4 py-12">
    <ExperienceIntro />

    <TimelineCareer />

    <CallToAction />
  </div>
</Layout>
